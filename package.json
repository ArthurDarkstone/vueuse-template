{
  "name": "utils-monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "description": "Utils for xx group",
  "author": "ArthurDarkstone<https://github.com/ArthurDarkstone/>",
  "scripts": {
    "build": "nr update && esno scripts/build-run.ts",
    "build:redirects": "esno scripts/redirects.ts",
    "build:rollup": "NODE_OPTIONS=\"--max-old-space-size=6144\" rollup --config=rollup.config.ts --configPlugin=rollup-plugin-esbuild",
    "build:types": "tsc --emitDeclarationOnly && nr types:fix",
    "clean": "rimraf --glob dist types \"packages/*/dist\"",
    "dev": "nr update && nr docs",
    "docs": "vue-demi-switch 3 && vitepress dev packages --open",
    "docs:build": "nr update:full && vitepress build packages && nr build:redirects && esno scripts/post-docs.ts",
    "docs:serve": "vitepress serve packages",
    "docs:preview": "vue-demi-switch 3 && vitepress preview packages --port 8080 ",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "publish:ci": "esno scripts/publish.ts",
    "install-fonts": "gfi install Inter && gfi install Fira Code",
    "release": "bumpp --execute=\"npm run release:prepare\" --all",
    "release:prepare": "npm run build:types && npm run update",
    "size": "esno scripts/export-size.ts",
    "test": "vitest",
    "test:2": "vue-demi-switch 2.7 vue2 && vitest run --silent",
    "test:3": "vue-demi-switch 3 && vitest run",
    "test:all": "nr test:3 && nr test:2 && vue-demi-switch 3",
    "test:cov": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "types:fix": "esno scripts/fix-types.ts",
    "update": "nr -C packages/metadata update && esno scripts/update.ts",
    "update:full": "nr update && nr build:types",
    "watch": "esno scripts/build-run.ts --watch"
  },
  "dependencies": {
    "@vueuse/core": "^10.9.0"
  },
  "devDependencies": {
    "@algolia/client-search": "^4.22.1",
    "@antfu/eslint-config": "^2.8.0",
    "@antfu/ni": "^0.21.12",
    "@iconify/json": "^2.2.189",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-replace": "^5.0.5",
    "@type-challenges/utils": "^0.1.1",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/md5": "^2.3.5",
    "@types/node": "^20.11.24",
    "@types/remove-markdown": "^0.3.4",
    "@types/semver": "^7.5.8",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "@vue/compiler-sfc": "^3.4.21",
    "@vue/test-utils": "^2.4.4",
    "axios": "^1.6.7",
    "bumpp": "^9.4.0",
    "consola": "^3.2.3",
    "esbuild": "^0.20.1",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-format": "^0.1.0",
    "esno": "^4.7.0",
    "export-size": "^0.7.0",
    "fake-indexeddb": "^5.0.2",
    "fast-glob": "^3.3.2",
    "firebase": "^10.8.1",
    "fs-extra": "^11.2.0",
    "fuse.js": "^7.0.0",
    "google-font-installer": "^1.2.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "markdown-table": "^3.0.3",
    "md5": "^2.3.0",
    "msw": "1.0.1",
    "node-fetch": "^3.3.2",
    "node-fetch-native": "^1.6.2",
    "ofetch": "^1.3.3",
    "pnpm": "^8.15.4",
    "postcss": "^8.4.35",
    "postcss-nested": "^6.0.1",
    "prettier": "^3.2.5",
    "prism-theme-vars": "^0.2.4",
    "remove-markdown": "^0.5.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-pure": "^0.2.1",
    "search-insights": "^2.13.0",
    "simple-git": "^3.22.0",
    "simple-git-hooks": "^2.10.0",
    "taze": "^0.13.3",
    "typescript": "^5.4.5",
    "unocss": "^0.58.5",
    "unplugin-icons": "^0.18.5",
    "unplugin-vue-components": "^0.26.0",
    "utils-core": "workspace:*",
    "utils-vue": "workspace:*",
    "vite": "^5.1.5",
    "vite-plugin-inspect": "^0.8.3",
    "vite-plugin-pwa": "^0.19.2",
    "vitepress": "1.0.0-rc.44",
    "vitest": "^1.3.1",
    "vue": "^3.4.21",
    "vue2": "npm:vue@^3.4.21"
  },
  "pnpm": {
    "neverBuiltDependencies": [
      "electron"
    ],
    "overrides": {
      "magic-string": "^0.30.5",
      "rollup": "^4.6.1",
      "vite": "^5.0.5",
      "vue-demi": "^0.14.6"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ]
  }
}
